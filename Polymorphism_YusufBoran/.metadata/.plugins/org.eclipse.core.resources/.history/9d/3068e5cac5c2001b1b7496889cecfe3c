package Ornek1.classes;

import Ornek1.interfaces.UcBoyutlu;

public class Silindir extends Daire implements UcBoyutlu {

	public Silindir(double yaricap, int yükseklik) {
		super(yaricap);
		this.yukseklik = yükseklik;
	}

	private int yaricap, yukseklik;

	@Override
	public void hacimHesapla() {
		System.out.println("Silindirin hacmi: " + tabanAlani() * yukseklik);
	}

	@Override
	public void alanHesapla() {
		System.out.println("Silindirin yüzey alanı: " + ((2 * tabanAlani()) + (yukseklik * 2 * Math.PI * getYaricap())));
	}

	@Override
	public double tabanAlani() {
		return super.tabanAlani();
	}

}
